<section class="relative bg-gradient-to-r from-purple-800 via-pink-600 to-blue-500 text-white min-h-[calc(100vh-4rem)] flex flex-col items-center justify-center overflow-hidden dynamic-gradient">
  <!-- Geometric Pattern Layer -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="w-64 h-64 bg-pink-400 rounded-full absolute -top-16 -left-16 animate-bounce-slow"></div>
    <div class="w-96 h-96 bg-blue-500 rounded-lg absolute top-32 right-32 transform rotate-45 animate-spin-slow"></div>
    <div class="w-72 h-72 border-2 border-teal-400 rounded-full absolute bottom-16 left-16 animate-pulse"></div>
  </div>

  <!-- Hero Content -->
  <div class="relative text-center bg-black bg-opacity-70 border-2 border-pink-400 px-6 py-8 rounded-md shadow-lg z-10 animate-fade-in max-w-3xl mx-auto">
    <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight leading-tight">
      {{ hero_title | default("Default Title") }}
    </h1>
    <p class="text-base md:text-lg text-gray-300 mt-4 leading-relaxed">
      {{ hero_subtitle | default("Default subtitle text goes here.") }}
    </p>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-6 flex justify-center w-full z-10">
    <a href="#content" class="animate-bounce">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
    </a>
  </div>
</section>
