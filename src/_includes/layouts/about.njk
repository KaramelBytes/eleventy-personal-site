---
layout: base.njk
title: About Me
---

{% set hero_title = "About Me" %}
{% set hero_subtitle = "A glimpse into my journey, interests, and the stories that define me." %}
{% block hero %}
  {% include "partials/hero.njk" %}
{% endblock %}

{% block content %}
<section id="content-wrapper" class="relative z-10 bg-gradient-to-b from-gray-900 to-gray-800 text-white py-16 px-8">
  <!-- Background Patterns -->
  <div class="absolute inset-0 opacity-10 pointer-events-none">
    <div class="w-32 h-32 bg-pink-400 rounded-full absolute top-10 left-10 animate-pulse"></div>
    <div class="w-48 h-48 bg-blue-500 rounded-lg absolute bottom-20 right-20 transform rotate-45"></div>
    <div class="w-40 h-40 border-2 border-purple-500 rounded-full absolute top-32 right-1/3"></div>
  </div>

  <!-- Narrative Sections -->
  {% set positions = [
    { class: 'left-0', border: 'border-pink-400' },
    { class: 'left-1/4', border: 'border-pink-400' },
    { class: 'left-1/2', border: 'border-purple-400' },
    { class: 'left-3/4', border: 'border-purple-500' },
    { class: 'right-0', border: 'border-purple-500' }
  ] %}
  {% for section in narrative %}
    <div class="relative z-20 py-16 px-8 text-center max-w-5xl mx-auto animate-fade-in">
      <h2 class="text-4xl md:text-5xl font-extrabold tracking-tight text-white">{{ section.title }}</h2>
      <p class="mt-6 text-lg md:text-xl text-gray-300 leading-relaxed">{{ section.content | safe }}</p>
    </div>

    <!-- Section Divider -->
    {% if not loop.last %}
    <div class="relative w-full h-16 bg-gradient-to-r from-pink-400 to-purple-500 transform -skew-y-3">
      {% set pos_index = loop.index0 % positions.length %}
      <div class="absolute top-1/2 {{ positions[pos_index].class }} transform -translate-y-1/2 w-12 h-12 bg-white rounded-full opacity-50 border-4 {{ positions[pos_index].border }}"></div>
    </div>
    {% endif %}
  {% endfor %}
</section>
{% endblock %}
