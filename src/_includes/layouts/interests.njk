---
layout: base.njk
title: Interests
---

{% set hero_title = "Explore My Interests" %}
{% set hero_subtitle = "A peek into the hobbies and passions that keep me inspired." %}
{% block hero %}
  {% include "partials/hero.njk" %}
{% endblock %}

{% block content %}
<section id="interests-wrapper" class="relative z-10 bg-gradient-to-b from-gray-900 to-gray-800 text-white py-16 px-8">
  <!-- Background Patterns -->
  <div class="absolute inset-0 opacity-10 pointer-events-none">
    <div class="w-32 h-32 bg-pink-400 rounded-full absolute top-10 left-10"></div>
    <div class="w-48 h-48 bg-blue-500 rounded-lg absolute bottom-20 right-20 transform rotate-45"></div>
    <div class="w-40 h-40 border-2 border-purple-500 rounded-full absolute top-32 right-1/3"></div>
  </div>

  <!-- Interests Section -->
  <div class="relative z-20 py-16 text-center">
    <h2 class="text-4xl md:text-5xl font-extrabold tracking-tight text-white">My Interests</h2>
    <p class="mt-6 text-lg md:text-xl text-gray-300">{{ content | safe }}</p>
  </div>

  <!-- Instruction Text -->
  <div class="relative z-20 py-4 text-center">
    <p class="text-sm md:text-base text-gray-400">
      Click or tap on a category below to explore the details.
    </p>
  </div>

  <!-- Categories Section -->
  <div class="relative z-20 py-16">
    <div class="max-w-6xl mx-auto space-y-8">
      {% for category in categories %}
        <div 
          class="category-card bg-gray-800 rounded-lg p-6 cursor-pointer hover:bg-gray-700 transition relative"
          data-category-id="{{ category.id }}"
          tabindex="0" 
          role="button" 
        >
          <!-- Interactive Indicator -->
          <div class="absolute right-4 top-4 text-pink-400 transform transition-transform group-hover:translate-x-2">
            <i class="fas fa-chevron-down"></i>
          </div>

          <div class="flex justify-between items-center">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-gray-700 rounded-full flex items-center justify-center">
                <i class="{{ category.icon }} text-pink-400 text-2xl"></i>
              </div>
              <h3 class="text-2xl font-bold text-white">{{ category.title }}</h3>
            </div>
          </div>
          <p class="mt-4 text-gray-400">{{ category.description }}</p>
          <div id="{{ category.id }}" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mt-6 hidden">
            {% for subinterest in category.subinterests %}
              <div class="bg-gray-700 bg-opacity-90 p-4 rounded-lg shadow-lg">
                <img src="{{ subinterest.image }}" alt="{{ subinterest.title }}" class="w-full h-40 object-cover rounded-md mb-4">
                <h4 class="text-lg font-semibold text-white">{{ subinterest.title }}</h4>
                <p class="text-gray-300 text-sm">{{ subinterest.description }}</p>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% endblock %}
