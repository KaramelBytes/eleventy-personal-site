---
layout: base.njk
---

{% set hero_title = hero_title %}
{% set hero_subtitle = hero_subtitle %}
{% block hero %}
  {% include "partials/hero.njk" %}
{% endblock %}

{% block content %}
<section id="content-wrapper" class="relative z-10 bg-gradient-to-b from-gray-900 to-gray-800 text-white py-16 px-8">
  <!-- Background Patterns -->
  <div class="absolute inset-0 opacity-10 pointer-events-none">
    <div class="w-32 h-32 bg-pink-400 rounded-full absolute top-10 left-10 animate-pulse"></div>
    <div class="w-48 h-48 bg-blue-500 rounded-lg absolute bottom-20 right-20 transform rotate-45"></div>
    <div class="w-40 h-40 border-2 border-purple-500 rounded-full absolute top-32 right-1/3"></div>
  </div>

  <!-- Explore Highlights Section -->
  <div id="highlight-grid" class="relative z-20 py-16">
    <!-- Section Title -->
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-extrabold tracking-tight">Key Features</h2>
      <p class="text-lg md:text-xl text-gray-300 mt-4">Discover what this site has to offer.</p>
    </div>

    <!-- Highlight Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {% for highlight in highlights %}
        <div class="flex flex-col items-center text-center bg-gray-700 bg-opacity-90 p-6 rounded-md shadow-lg hover:shadow-2xl transition transform hover:scale-105">
          <div class="w-16 h-16 bg-{{ highlight.bg_color }} rounded-full flex items-center justify-center mb-4 hover:bg-{{ highlight.hover_bg_color }} transition">
            <i class="{{ highlight.icon }} text-white text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold">{{ highlight.title }}</h3>
          <p class="text-gray-300 mt-2">{{ highlight.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>

  <!-- Graphic Separator -->
  <div class="relative w-full h-16 bg-gradient-to-r from-purple-500 to-pink-400 -skew-y-3"></div>

  <!-- Intro Section -->
  <div id="intro-content" class="relative text-center py-16">
    <h2 class="text-4xl md:text-5xl font-extrabold tracking-tight">{{ intro_section.title }}</h2>
    <p class="text-lg md:text-xl text-gray-300 mt-4 leading-relaxed">{{ intro_section.description }}</p>
    <div class="mt-6">
      <a href="{{ intro_section.button_link }}" class="inline-block px-6 py-3 bg-blue-500 text-white font-bold text-lg rounded-md shadow-md hover:bg-blue-600 transition">
        {{ intro_section.button_text }}
      </a>
    </div>
  </div>
</section>
{% endblock %}
